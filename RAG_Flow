digraph RAG_Flow {
	User [label="Usuário"]
	Query [label=Consulta]
	Retriever [label="Mecanismo de Busca"]
	Documents [label="Documentos Recuperados"]
	LLM [label="Modelo de Linguagem (LLM)"]
	Response [label="Resposta Gerada"]
	User -> Query [label="1. Insere consulta"]
	Query -> Retriever [label="2. Busca no repositório"]
	Retriever -> Documents [label="3. Recupera documentos relevantes"]
	Documents -> LLM [label="4. Envia documentos para o LLM"]
	Query -> LLM [label="5. Envia consulta para o LLM"]
	LLM -> Response [label="6. Gera resposta contextualizada"]
	Response -> User [label="7. Exibe resposta ao usuário"]
}
